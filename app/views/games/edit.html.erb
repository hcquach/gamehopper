<%= content_for(:title) do %>
Game Hopper-Edit Game
<% end %>
<div class="background-image" style="url(background-image: url('https://res.cloudinary.com/le-wagon-hcquach/image/upload/v1527838928/video-games-super-mario-galaxy-1920x1080-55914_1.jpg')>
  <div class="container">
    <h2>Edit my game</h2>
    <div class="row">
      <div class="col-sm-12 col-md-4 col-md-offset-4">
        <%= simple_form_for(@game, html: {class: 'form-horizontal' }) do |f| %>
          <%= f.input :title, class: "label-input" %>
          <%= f.input :description, :as => :text, :input_html => { :rows => 7 }, class: "label-input" %>
          <%= f.input :price, class: "label-input" %>
          <%= f.input :platform, collection: Game::PLATFORMS, class: "label-input" %>
          <%= f.input :photo, class: "label-input" %>
          <%= f.input :photo_cache, as: :hidden, class: "label-input" %>
          <div class="create-btn">
          <%= f.submit "Save changes", class: "btn btn-primary btn-lg btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
