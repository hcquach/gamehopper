<%= content_for(:title) do %>
Game Hopper-Landing
<% end %>
<div class="games-container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active cover">
      <img src="https://images.alphacoders.com/564/thumb-1920-564986.jpg" alt="Metal Gear">
      <div class="carousel-caption comment-1">
        <h1>Game Hopper </h1>
      </div>
    </div>
    <div class="item">
      <%= cl_image_tag(@games.first.photo, :transformation =>[ { :q_auto=>"best"},
           {:width=>1500, :height=>700, :crop=>"fill"}
      ])%>
      <div class="carousel-caption">
        <div class="title-carousel">
          <h5><%= @games.first.platform %></h5>
          <h3><%= @games.first.title %></h3>
        </div>
        <div class="btn-carousel">
        <%= link_to "Rent Now", game_path(@games.first.id), class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="item">
      <%= cl_image_tag(@games.second.photo, :transformation =>[ { :q_auto=>"best"},
           {:width=>800, :height=>800, :crop=>"fill"}
      ])%>
      <div class="carousel-caption">
        <div class="title-carousel">
          <h5><%= @games.second.platform %></h5>
          <h3><%= @games.second.title %></h3>
        </div>
        <div class="btn-carousel">
        <%= link_to "Rent Now", game_path(@games.second.id), class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="item">
      <%= cl_image_tag(@games.third.photo, :transformation =>[ { :q_auto=>"best"},
           {:width=>1500, :height=>700, :crop=>"fill"}
      ])%>
      <div class="carousel-caption">
        <div class="title-carousel">
          <h5><%= @games.third.platform %></h5>
          <h3><%= @games.third.title %></h3>
        </div>
        <div class="btn-carousel">
        <%= link_to "Rent Now", game_path(@games.third.id), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
 </div>
  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

    <h2>Complete Games List</h2>

    <div class="card-grid">
      <div class="row">
        <% @games.each do |game| %>
        <div class="col-xs-12 col-sm-3">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path game.photo, crop: :fill %>');">
            <div class="card-platform">
                <%= game[:platform] %>
            </div>
            <div class="card-title">
              <h2><%= link_to game.title, game_path(game) %></h2>
            </div>
            <% link_to game.title, game_path(game), class:"card-link" %>
          </div>
        </div>

        <% end %>
      </div>
    </div>


</div>
