<div class="games-container">

  <div class="title-container">

    <div class="home-title">
     <h1>Game Hopper</h1>
     <h2>Complete Games List</h2>
    </div>

  </div>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://www.gannett-cdn.com/-mm-/d89f49a05027c2c5e3acf9e3f0cb8ec05b9089c8/c=4-0-1916-1080&r=x1683&c=3200x1680/local/-/media/2017/04/15/USATODAY/USATODAY/636278623850642408-SWBFII-Reveal-Screenshot-7.png" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="..." alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="..." alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
</div>

    <div class="card-grid">
      <div class="row">
        <% @games.each do |game| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <div class="card-platform">
                <%= game[:platform] %>
            </div>
            <div class="card-title">
              <h2><%= link_to game.title, game_path(game) %></h2>
            </div>
            <% link_to game.title, game_path(game), class:"card-link" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>

</div>
