<div class="games-container">

  <div class="title-container">

    <div class="home-title">
     <h1>Game Hopper</h1>
     <h2>Complete Games List</h2>
    </div>

  </div>

    <div id="carouselIndicators" class="carousel slide" data-ride="carousel">

      <ol class="carousel-indicators">
        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselIndicators" data-slide-to="1"></li>
        <li data-target="#carouselIndicators" data-slide-to="2"></li>
      </ol>

      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="http://s3-us-west-2.amazonaws.com/sleuthjournal/wp-content/uploads/2017/08/10170428/Video-Games-1024x683.jpeg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://fortunedotcom.files.wordpress.com/2015/03/the_london_heist.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="http://s3-us-west-2.amazonaws.com/sleuthjournal/wp-content/uploads/2017/08/10170428/Video-Games-1024x683.jpeg" alt="Third slide">
        </div>
      </div>

      <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>

    </div>

    <div class="card-grid">
      <div class="row">
        <% @games.each do |game| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path game.photo, height: 300, width: 400, crop: :fill %>');">
            <div class="card-platform">
                <%= game[:platform] %>
            </div>
            <div class="card-title">
              <h2><%= link_to game.title, game_path(game) %></h2>
            </div>
            <% link_to game.title, game_path(game), class:"card-link" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>

</div>
