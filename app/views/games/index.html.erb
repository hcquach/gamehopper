<div class="games-container">

  <div class="title-container">

    <div class="home-title">
      <h1>WELCOME TO GAME HOPPER</h1>
    </div>

  </div>

  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="https://images.alphacoders.com/564/thumb-1920-564986.jpg" alt="Metal Gear">
      </div>
      <div class="item">
        <img src="http://gameranx.com/images/updates/1274566383red3-1080p.jpg" alt="Red Dead">
      </div>
      <div class="item">
        <img src="https://2.bp.blogspot.com/-pjS1fweA5lM/WdzKeI-mDpI/AAAAAAAAGYc/MSB6Wv6lJKkkQ4x70uULGqQlkP6WFfLjgCLcBGAs/s1920/Splatoon-2-Desktop-Wallpaper.jpg" alt="Splatoon 2">
      </div>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <h2>Complete Games List</h2>

  <div class="card-grid">
    <div class="row">
      <!-- Template for games to be turned into cards -->
      <% @games.each do |game| %>
        <div class="col-xs-12 col-sm-3">
          <!-- entire card body wrapped in link -->
          <%= link_to game_path(game) do %>
            <div class="card-body">
              <div class="card-head">
                <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path game.photo, crop: :fill %>');">
                </div>
              </div>
              <div class="card-footer">
                <div class="card-title">
                  <%= game.title %>
                </div>
                <div class="card-platform">
                  <%= game[:platform] %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
