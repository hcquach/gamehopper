<%= content_for(:title) do %>
Game Hopper-Landing
<% end %>
<div class="games-container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active cover">
      <img src="https://images.alphacoders.com/564/thumb-1920-564986.jpg" alt="Metal Gear">
      <div class="carousel-caption comment-1">
        <h1>Game Hopper </h1>
      </div>
    </div>
    <div class="item">
      <img src="http://gameranx.com/images/updates/1274566383red3-1080p.jpg" alt="Red Dead">
      <div class="carousel-caption">
        <h1> Gamers rent from other gamers</h1>
      </div>
    </div>
    <div class="item">
      <img src="https://2.bp.blogspot.com/-pjS1fweA5lM/WdzKeI-mDpI/AAAAAAAAGYc/MSB6Wv6lJKkkQ4x70uULGqQlkP6WFfLjgCLcBGAs/s1920/Splatoon-2-Desktop-Wallpaper.jpg" alt="Splatoon 2">
    <div class="carousel-caption">
        <h1>Rent and play</h1>
      </div>
  </div>
  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

    <h2>Complete Games List</h2>

    <div class="card-grid">
      <div class="row">
        <% @games.each do |game| %>
        <div class="col-xs-12 col-sm-3">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path game.photo, crop: :fill %>');">
            <div class="card-platform">
                <%= game[:platform] %>
            </div>
            <div class="card-title">
              <h2><%= link_to game.title, game_path(game) %></h2>
            </div>
            <% link_to game.title, game_path(game), class:"card-link" %>
          </div>
        </div>

        <% end %>
      </div>
    </div>


</div>
