<%= content_for(:title) do %>
Game Hopper-Rental List
<% end %>
<div class="games-container">

  <div class="title-container">

    <div class="home-title">
     <h1>Game Hopper</h1>
     <h2>Complete Rented Games List</h2>
    </div>

  </div>
  <% if @rentals.empty? %>
    <h3 class="home-title"> No rented games </h3>
  <% else %>
    <div class="container">

        <% @rentals.each do |rental| %>
            <div class="rental-block">
              <div class = "rental-card" >
                <%= cl_image_tag rental.game.photo , height: 500, width: 400, crop: :fill %>
              </div>
              <div class = "rental-description">
                <h4><%= rental.game.title %></h4>
                <p><%= rental.game.description %></p>
                <p><%= rental.start_date %></p>
                <p><%= rental.end_date %></p>
                <div class="btn-rental">
                  <%= link_to 'Cancel', rental_path(rental), method: :delete, class: "btn btn-danger btn-rental-delete" %>
                </div>
              </div>
            </div>
        <% end %>

    </div>
  <% end %>

</div>
