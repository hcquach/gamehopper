<div class="navbar-wagon">
  <!-- Logo -->
  <div class="logo-search-container">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "gamehopperwhite.png", height: 50 %>
    <% end %>
    <i class="fas fa-search fav-icon"></i>
    <%= form_tag games_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search for Fifa, PS4..."
      %>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <%= link_to "Add my game", new_game_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "My rentals", rentals_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <div class="nav-username navbar-wagon-item navbar-wagon-link">
        <%= current_user.username %>
      </div>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{current_user.username}", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= mail_to "", "Invite a friend", subject: "Check Gamehopper, I love it", body: "Follow the lead: https://game-hopper.herokuapp.com/games/" %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i><%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Add my game", new_game_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "My rentals", rentals_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

